<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/buttonPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AuthTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/textPrimaryLight</item>
        <item name="color">@color/colorAccent</item>
        <item name="android:cursorVisible">false</item>
        <item name="errorTextColor">@color/colorAccent</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="errorIconTint">@color/colorAccent</item>
    </style>

</resources>